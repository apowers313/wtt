{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "create",
        "list",
        "switch",
        "merge",
        "remove",
        "ports",
        "config",
        "git",
        "path",
        "test",
        "ci",
        "deps",
        "release"
      ]
    ]
  }
}